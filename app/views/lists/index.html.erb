<h1>All my lists (<%= @lists.length %>)</h1>

<div class="cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
    <div class="card-category my-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random)">
      <h5><%= list.name %></h5>
    </div>
    <% end %>
  <% end %>
</div>
